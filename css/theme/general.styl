
/**
 *  Fonts
 */
@import 'typography'

font = unquote('BwSurco, sans-serif')

:root
    --color-one: 227, 69, 123
    --color-two: 156, 215, 214
    --color-three: 252, 214, 114

z-opacity(variable, opacity = 1)
    // return rgba as a string so it doesn't get interpolated by stylus compiler
    s('rgba(var(%s), %s)', variable, opacity)

/**
 * Mixins
 */
/**
 * Mixin - Font-weight
 */
light = 300
regular = 400
medium = 500
semibold = 600
bold = 700
/**
 * Mixin - Viewport
 */
viewport = 1200px
/**
 * Mixin - Responsive
 * @media (max-width screen-sm-min)
 * @media (max-width screen-md-min)
 * @media (max-width screen-lg-min)
 */
screen-xxs = 320px
// Small devices (phones, 568px and down)
screen-xs = 568px
// Small devices (tablets, 768px and down)
screen-sm = 768px
// Medium devices (desktops, 992px and down)
screen-md = 992px
// Medium devices (desktops, 1200px and down)
screen-lg = 1200px

/*
 * Global
 * Elementos globais que podem ser extendidos ao longo do documento
 */
.container
    min-width: 0
    max-width: viewport
    margin: 0 auto
    width: auto

.header, .main-container
    @extend .container

.cms-home .main-container
    max-width: none

/*
 * Base
 * Estilo base do elementos do Html
 */
html
    font-family: font
    font-weight: 400

/*
 * Components
 * Componentes que se adaptam ao contexto
 */
.wrapper-container
    padding-top: 101px

    @media (min-width: 993px)
        padding-top: 157px

input[type=text], input[type=password], input[type=search], input[type=email], input[type=url], input[type=tel], input[type=number], input[type=date], input[type=mounth], input[type=week], input[type=time], input[type=datetime], input[type=datetime-local], input[type=color]
    box-shadow: none

/*
 * Component - Menssagens
 */
.messages
    > li
        display: block
        padding: 10px 20px
        margin-bottom: 20px
        font-size: 14px

    .success-msg
        border: 1px solid #2baf60
        background: #c8efc0
        color: #1d904b

    .error-msg
        border: 1px solid #d92100
        background: #ffdcdc
        color: #d92100

    .notice-msg
        border: 1px solid #f7be07
        background: #f9f0d5
        color: #f7be07

