.header
    padding: 8px 20px 0

    &-container
        &:before
            content: ''
            position: absolute
            top: 0
            left: 0
            width: 100%
            height: 8px
            background: linear-gradient(to right, color1_bg 44%, color2_bg 44% 72%, color3_bg 72%)

@media (min-width: 994px)
    .header
        position: static
        align-items: stretch
        padding-top: 20px
        max-height: 140px
        transition: all 0.2s ease

        &-container
            &:before
                height: 20px

        .scrolling &
            max-height: 110px

@media (min-width: (viewport + 40px))
    .header
        padding-left: 0
        padding-right: 0