.newsletter
    margin: 0 -16px

    &__text
        background: color3_bg
        padding: 10px 20px
        text-align: center
        line-height: 1
        color: #8b85ca

        strong
            display: block
            font-size: 15px
            font-weight: 900

        span
            font-size: 10px
            font-weight: regular

    &__name, &__email
        margin: 0 90px
        min-width: 0

        .input-text
            height: 25px
            border-radius: 3px
            border: solid 2px #8b85ca
            padding: 0 5px

            &::placeholder
                font-size: 12px
                font-weight: regular
                color: #8f8f8f
                text-transform: uppercase

    &__submit
        text-align: center
        flex: 0 0 100%

    &__btn
        display: inline-flex
        justify-content: center
        align-items: center
        height: 22px
        padding: 0 10px
        font-size: 12px
        font-weight: medium
        text-transform: uppercase
        background: color2_bg
        width: auto
        box-shadow: none

@media (min-width: 993px)
    .newsletter
        margin-top: 50px

        &__form
            justify-content: center

        &__text
            padding: 30px 0
            margin-bottom: 50px

            strong
                font-size: 35px

            span
                font-size: 22px

        &__name, &__email
            flex: 1 1 50%
            margin: 0 30px
            max-width: 370px

            .input-text
                height: 40px
                padding: 0 10px
                border-radius: 6px

        &__submit
            margin-top: 30px

        &__btn
            height: 40px
            font-size: 22px
            padding: 0 20px