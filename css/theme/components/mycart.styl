.mycart
    &__icon
        --color-1: color1_bg
        --color-2: color2_bg
        width: 20px
        height: 25px

    &__item
        border-bottom: 0
        margin-bottom: 0
        padding-bottom: 0

    &__name
        margin-bottom: 0

        a
            font-size: 15px
            color: color1_bg

    &__details
        .truncated, .mycart__qtd, .mycart__remove
            display: none

        .price
            font-size: 15px
            font-weight: 900
            color: #8b85ca

    &__quantity
        position: absolute
        bottom: 5px
        right: 5px
        display: flex
        justify-content: center
        align-items: center
        width: 13px
        height: 13px
        border: solid 2px #fff
        border-radius: 50%
        font-size: 8px
        background: color1_bg
        color: #fff

        span
            margin-top: -1px

    &__header
        width: 40px
        height: 40px

        a
            display: flex
            justify-content: center
            align-items: center
            width: 100%
            height: 100%

    &__totals
        .price-box-avista, .price-box-parcelado
            display: none

        .title
            display: flex
            justify-content: space-between
            align-items: center
            font-size: 14px
            font-weight: regular
            text-transform: uppercase
            color: color1_bg
            margin: 10px 0

            &:after
                content: ''
                height: 1px
                flex: 1
                min-width: 1px
                min-height: 1px
                background: color1_bg
                margin-left: 5px

        .regular-price
            text-align: right

            .label
                display: none

            .price
                font-size: 22px
                font-weight: 900
                color: #8b85ca

    &__actions
        border-top: 0
        background: color1_bg

        .finalizar, .editar
            font-size: 14px
            text-transform: uppercase
            color: #fff

    &__content
        > .title
            display: none

@media (min-width: 993px)
    .mycart
        display: flex
        justify-content: center
        align-items: center
        height: auto
        min-width: 55px
        max-height: 100%

        .header &
            margin: 0

        &__icon
            width: 24px
            height: 29px

        &__quantity
            bottom: 0
            width: 16px
            height: 16px
            font-size: 10px

            span
                margin-top: -2px

        &__header
            position: relative
            height: 40px

        &:hover
            .mycart__header a
                background: none

        &__content
            background: #fff
            box-shadow: none
            box-sizing: content-box
            background-clip: padding-box
            border: solid 20px rgba(255, 255, 255, 0)
            border-radius: 30px
            width: 505px

        &__list
            max-height: 380px
            overflow-y: scroll

            &::-webkit-scrollbar-thumb
                border-radius: 4px
                background: color1_bg
                border-radius: 4px

            &::-webkit-scrollbar-track
                width: 4px
                background: #fff

            &::-webkit-scrollbar
                width: 4px
