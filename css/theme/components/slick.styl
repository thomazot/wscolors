.prod__gallery
    .slick
        &-arrow
            z-index: 30
            width: 48px
            height: 55px
            box-shadow: none
            visibility: hidden

            .ico
                width: 22px
                height: 55px
                fill: color1_bg

        &-next:before, &-prev:before
            display: none

        &-dots
            li
                button
                    width: 10px
                    height: 10px
                    border: solid 2px color1_bg
                    border-radius: 50%
                    background: #fff
                    opacity: 1

                    &:before
                        display: none

                &.slick-active
                    button
                        background: color2_bg
                        box-shadow: inset 0 0 0 2px #fff

@media (min-width: 993px)
    .prod__gallery
        img
            width: 100%
            object-fit: contain

        .slick
            &_slide
                cursor: pointer

            &-arrow
                visibility: visible

            &-dots
                display: none !important