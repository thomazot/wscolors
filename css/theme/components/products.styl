.products
    &__case
        box-shadow: none

    &__name
        display: block
        font-size: 10px
        margin: 10px 0

    &__main
        text-align: center

    &__title
        display: flex
        justify-content: center
        align-items: center
        font-size: 12px
        text-transform: uppercase
        text-align: center
        font-weight: medium
        color: color1_bg

        span
            margin: 0 20px
            letter-spacing: 1px

        strong
            display: block
            font-weight: 900
            letter-spacing: 0

        &:before, &:after
            content: ''
            flex: 1
            min-width: 0
            height: 3px
            background: color2_bg

    &__footer
        text-align: center
        padding: 15px 0

    &__more
        display: inline-flex
        justify-content: center
        align-items: center
        width: 234px
        height: 22px
        border-radius: 3px
        font-size: 12px
        font-weight: medium
        text-transform: uppercase
        background: color2_bg
        color: #fff

@media (min-width: 993px)
    .products
        .cms-home &
            @extend .container

        &__name
            font-size: 19px

        &__title
            font-size: 20px

        &__footer
            padding: 30px 0

        &__more
            font-size: 28px
            width: 403px
            height: 51px
            border-radius: 6px
