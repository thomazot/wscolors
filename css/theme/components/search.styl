.search
    position: fixed
    top: 0
    left: 0
    z-index: 30
    display: flex
    justify-content: center
    align-items: center
    width: 100%
    height: 100%
    opacity: 0
    visibility: hidden
    background: z-opacity(--color-one, 0.9)
    transition: all 0.2s ease

    .header &.on
        position: fixed
        opacity: 1
        visibility: visible

    &__show
        display: flex
        justify-content: center
        align-items: center
        width: 40px
        min-width: 55px
        box-shadow: none
        padding: 0
        background: #fff

        &:hover
            background: #fff

    &__button
        display: flex
        justify-content: center
        align-items: center
        width: 40px
        height: 40px
        background: none
        padding: 0
        box-shadow: none

        .search__icon
            --color-1: #fff
            --color-2: #fff

    .header &__input
        background: none
        border: 0
        color: #fff
        font-size: 14px
        font-style: italic
        padding: 0

        &::placeholder
            color: #fff
            text-transform: uppercase

        &:focus::placeholder
            color: transparent

    &__form
        width: 80%
        border-bottom: solid 2px #fff

    &__icon
        --color-1: color1_bg
        --color-2: color2_bg
        width: 22px
        height: 22px

@media (min-width: 993px)
    .search
        &__icon
            width: 29px
            height: 29px